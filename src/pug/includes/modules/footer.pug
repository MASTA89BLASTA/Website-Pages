              h3.footer-block_title Navigation
              .footer-block_content
                ul.footer-menu
                  li.footer-menu_item About Us
                  li.footer-menu_item News
                  li.footer-menu_item Support
                  li.footer-menu_item Products

        .footer-block_menu-item       
          .footer-block_nav
            .footer-block_about
              h3.footer-block_title About Us
              .footer-block_content
                ul.footer-menu
                  li.footer-menu_item Who we are
                  li.footer-menu_item Our team
                  li.footer-menu_item Careers
                  li.footer-menu_item Investors

        .footer-block_menu-item       
          .footer-block_nav
            .footer-block_support
              h3.footer-block_title Support
              .footer-block_content
                ul.footer-menu
                  li.footer-menu_item Documentation
                  li.footer-menu_item Community
                  li.footer-menu_item Get in Touch

        .footer-block_menu-item_email        
          .footer-block_nav
            .footer-block-subscribe
              h3.footer-block_title Subscribe to our newsletter
              .footer-block_content
                p
                  span.footer-block_content-text
                    | Receive our latest news and promotions in your inbox!
              .footer-block_form-email 
                form.footer_contact-email(action='', method='POST')
                  +date_dropdown("form_elements_input-wrapper", "email_input email_input-suscription", "email", "email", "Your email address",
                    "email_input-btn_subscription","submit", "arrow_forward.svg")
                //-
                  .footer_contact-email__input-wrapper
                    input.footer_contact-email__input(name='email', type='email', placeholder='Your email address', required='')
                    button.footer_contact-btn(type='submit')
                      img(src='assets/img/svg/arrow_forward.svg')      

