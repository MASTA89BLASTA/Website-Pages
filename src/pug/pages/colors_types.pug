extends ../layout/main
block variables
  - var pageTitle = "UI Kit Colors and Types"

block colors_types
  include ../includes/modules/logo
  .container
    .colors_types
      .colors-types_flex
        .color-block

          .color-block_item
            .color-block_item-color.bg_dark100
            .color-block_item-text
              h2.item-text_h2-full Dark Shade 100%
              p 
                span.item-text_p #1F2041

          .color-block_item
            .color-block_item-color.bg_dark75
            .color-block_item-text
              h2.item-text_h2-rgba Dark Shade 75%
              p 
                span.item-text_p #1F2041

          .color-block_item
            .color-block_item-color.bg_dark50
            .color-block_item-text
              h2.item-text_h2-rgba Dark Shade 50%
              p 
                span.item-text_p #1F2041

          .color-block_item
            .color-block_item-color.bg_dark25
            .color-block_item-text
              h2.item-text_h2-rgba Dark Shade 25%
              p 
                span.item-text_p #1F2041

          .color-block_item
            .color-block_item-color.bg_dark5
            .color-block_item-text
              h2.item-text_h2-5 Dark Shade 5%
              p 
                span.item-text_p #1F2041

          .color-block_item
            .color-block_item-color.bg_purple
            .color-block_item-text
              h2.item-text_h2-purple Purple
              p 
                span.item-text_p #BC9CFF;

          .color-block_item
            .color-block_item-color.bg_green
            .color-block_item-text
              h2.item-text_h2-green Green
              p 
                span.item-text_p #6FCF97;                  

        .types-block
          .type-block_elem-1
            .type-block_h1.title_color_float
              h1.h1_title H1
            .type-block_h1-text.text_font-float.type-block_color-h
              p
                span.h1_text This one is the sub-section or widget title

          .type-block_elem-2_3
            .type-block_h2.title_color_float
              h2.h2_title H2
            .type-block_h2-text.text_font-float.type-block_color-h
              p
                span.h2_text Next one is the item title inside widgets

          .type-block_elem-2_3
            .type-block_h3.title_color_float
              h3.h3_title H3
            .type-block_h3-text.text_font-float.type-block_color-h
              p
                span.h3_text This is a label or CTA text 

          .type-block_elem-4
            .type-block_body.title_color_float
              .body_title Body
            .type-block_body-text.text_font-float
              p
                span.h3_body This is the body text which is used for most of the design, like paragraphs, lists, etc.                  

